DCR_CONTAINER_REGISTRY=nebbog
DEMO_APP_DCR_REPOSITORY_NAME=demo-app
pipeline {
 agent {
    kubernetes {
      cloud 'openshift'
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          serviceAccountName: jenkins-agent
          containers:
          - name:  ocpcli
            image: nebbog/ocpcli:1.0.0
            command:
            - cat
            tty: true
          - name: builder
            image: nebbog/builder:1.7.0
            command:
            - cat
            tty: true
            volumeMounts:
            - name: home-volume
              mountPath: /home/jenkins
            env:
            - name: HOME
              value: /home/jenkins
          volumes:
          - name: home-volume
            emptyDir: {}
       """
    }
  }

  stages {
 
   stage('Build Java project - demo-app') {
     steps{
       container('builder') {
         script {
           sh 'cd ci-cd;./build.sh'
         }
       }
     }
   }

  stage('Build image using buildconfigs: my-demo-app-image') {
    steps{
      container('ocpcli') {
        sh 'which oc;oc version'
        sh 'oc new-build --name demo-app --binary'
        sh 'cd ci-cd/docker;oc start-build demo-app --from-dir=. --follow --wait'
        sh 'cd ci-cd/docker;./make-image.sh'
      }
    }
  }

   
 }
}
